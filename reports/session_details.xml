<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="openacademy.report_details">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure">
                            <div class="row">
                                <div class="col-xs-8">
                                    <table>
                                        <tr>
                                            <td width="60%">
                                                <table>
                                                    <tr>
                                                        <td>
                                                            <span>
                                                                <strong>Session</strong>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <span>:</span>
                                                        </td>
                                                        <td>
                                                            <span t-field="o.name"></span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <span>
                                                                <strong>Start date</strong>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <span>:</span>
                                                        </td>
                                                        <td>
                                                            <span t-field="o.start_date"></span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <span>
                                                                <strong>End date</strong>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <span>:</span>
                                                        </td>
                                                        <td>
                                                            <span t-field="o.end_date"></span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <span>
                                                                <strong>Attendees</strong>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <span>:</span>
                                                        </td>
                                                        <td>
                                                            <span t-field="o.attendees_ids"></span>
                                                        </td>
                                                    </tr>
                                                </table>

                                            </td>
                                        </tr>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>