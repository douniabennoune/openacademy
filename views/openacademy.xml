<odoo>

    <!-- Course -->
    <record id="course_form" model="ir.ui.view">
        <field name="name">course.form</field>
        <field name="model">course</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="title"/>
                    <field name="responsible_id"/>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Sessions">
                            <field name="session_id">
                                <tree string="registered sessions">
                                    <field name="name"/>
                                    <field name="instructor_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="course_tree_view">
        <field name="name">course.tree</field>
        <field name="model">course</field>
        <field name="arch" type="xml">
            <tree string="Course Tree">
                <field name="title"/>
                <field name="responsible_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_list_courses">
        <field name="name">Courses</field>
        <field name="res_model">course</field>
        <field name="view_mode">tree,form</field>
    </record>

    m
    <menuitem id="main_openacademy_menu" name="Open Academy"/>
    <menuitem id="openacademy_menu" name="Open Academy" parent="main_openacademy_menu"/>
    <menuitem id="courses_menu" name="Courses" parent="openacademy_menu" action="action_list_courses"/>

    <!-- session -->

    <record id="session_form" model="ir.ui.view">
        <field name="name">session.form</field>
        <field name="model">session</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group string="General Information">
                        <field name="name"/>
                        <field name="course_id"/>
                        <field name="instructor_id"/>
                        <field name="active"/>
                    </group>
                    <group string="Schedule">
                        <field name="start_date"/>
                        <field name="duration"/>
                        <field name="number_of_seats"/>
                        <field name="taken_seats" widget="progressbar"/>
                        <field name="end_date"/>

                    </group>
                </group>
                <label for="attendees"/>
                <field name="attendees"/>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="session_tree_view">
        <field name="name">session.tree</field>
        <field name="model">session</field>
        <field name="arch" type="xml">
            <tree string="Session Tree" decoration-info="duration&lt;5" decoration-danger="duration&gt;15">
                <field name="name"/>
                <field name="course_id"/>
                <field name="duration"/>
                <field name="taken_seats" widget="progressbar"/>
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_list_session">
        <field name="name">Sessions</field>
        <field name="res_model">session</field>
        <field name="view_mode">tree,form,gantt,graph,kanban</field>
    </record>

    <menuitem id="session_menu" name="Sessions" parent="openacademy_menu" action="action_list_session"/>

    <record id="course_search_view" model="ir.ui.view">
        <field name="name">course.search</field>
        <field name="model">course</field>
        <field name="arch" type="xml">
            <search string="course search by title and description">
                <field name="title"></field>
                <field name="description"></field>

                <filter name="current_user_responsible" string="Current user" domain="[('responsible_id','=','uid')]"/>
                <group string="Group by">
                    <filter name="group_by_responsible_id" string="Responsible"
                            context="{'group_by':'responsible_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <record model="ir.ui.view" id="session_gantt_view">
        <field name="name">session.gantt</field>
        <field name="model">session</field>
        <field name="arch" type="xml">
            <gantt string="sessions" date_start="start_date" date_stop="end_date" default_group_by="instructor_id"/>
        </field>
    </record>


    <record model="ir.ui.view" id="session_graph_view">
        <field name="name">session.graph</field>
        <field name="model">session</field>
        <field name="arch" type="xml">
            <graph string="Number of attendees for each course" type="bar">
                <field name="course_id"/>
                <field name="attendees_number" type="measure"/>
            </graph>
        </field>
    </record>

    <record model="ir.ui.view" id="session_graph_view">
        <field name="name">session.graph</field>
        <field name="model">session</field>
        <field name="arch" type="xml">
            <graph string="Number of attendees for each course" type="bar">
                <field name="course_id"/>
                <field name="attendees_number" type="measure"/>
            </graph>
        </field>
    </record>


    <record model="ir.ui.view" id="session_kanban_view">
        <field name="name">session.kanban</field>
        <field name="model">session</field>
        <field name="arch" type="xml">
           <kanban default_group_by="course_id">
               <field name="name"/>
               <field name="course_id"/>
               <templates>
                   <t t-name="kanban-box">
                       <div t-attf-class="oe_kanban_global_click">
                           <div class="oe_kanban_details">
                               <ul>
                                    <li>
                                        <field name="name"></field>
                                    </li>
                               </ul>
                           </div>
                       </div>
                   </t>
               </templates>
           </kanban>
        </field>
    </record>





</odoo>